<div class="responsive-table">
    <table class="table my-3">
      <% contatos.forEach(contato => { %>
        <tr>
          <td><%= contato.name %></td>
          <td><%= contato.sobrenome %></td>
          <td><%= contato.email %></td>
          <td><%= contato.telefone %></td>
          <td><a href="/contato/<%= contato.id %>" class="text-white btn btn-sm btn-dark">Editar</a></td>
          <td><a href="/contato/delete/<%= contato.id %>" class="text-white btn-sm btn btn-danger">Excluir</a></td>
        </tr>
      <% })%>
    </table>
  </div>